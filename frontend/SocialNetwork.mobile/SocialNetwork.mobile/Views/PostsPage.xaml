<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialNetwork.mobile.Views.PostsPage"
             Title="Feed"
             xmlns:local="clr-namespace:SocialNetwork.mobile.ViewModels"
             xmlns:model="clr-namespace:SocialNetwork.mobile.Models">

    <Grid Padding="10" RowDefinitions="Auto,*">
        <Frame Grid.Row="0" Padding="8" HasShadow="False" BackgroundColor="White" CornerRadius="6">
            <StackLayout Orientation="Horizontal" Spacing="8">
                <Entry Placeholder="Post text"
                       Text="{Binding NewPostText}"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="Center" />
                <Button Text="Post"
                        Command="{Binding CreatePostCommand}"
                        VerticalOptions="Center" />
            </StackLayout>
        </Frame>

        <RefreshView Grid.Row="1" Command="{Binding LoadPostsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
            <CollectionView ItemsSource="{Binding Posts}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" x:DataType="model:Post">
                            <Label Text="{Binding UserName}" FontAttributes="Bold" />
                            <Label Text="{Binding Text}" LineBreakMode="TailTruncation" FontSize="16" />
                            <Label Text="{Binding CreatedAt}" FontSize="12" TextColor="Gray" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:PostsViewModel}}, Path=PostTapped}"
                                    CommandParameter="{Binding .}" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>